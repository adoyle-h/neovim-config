snippet sh-vars "Magic shell variables" b
_SCRIPT_DIR="$(cd "$(dirname "\$0")" && pwd)"
_SCRIPT_PATH="${_DIR}/$(basename "\$0")"
_BASENAME="$(basename "${_FILE}" .sh)"
_ROOT_PATH="$(cd "$(dirname "${_DIR}")" && pwd)" # <-- change "${_DIR}" as it depends on your app

arg1="\${1:-}"
endsnippet
