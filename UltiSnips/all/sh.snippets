snippet bash "Add bash shabang" b
#!/usr/bin/env bash
# shellcheck disable=${1:SC1090}
set -o errexit
set -o nounset
set -o pipefail
[[ -n "${TRACE+x}" ]] && set -o xtrace

${0}
endsnippet

snippet bash-opts "Add bash shell options for script" b
set -o errexit
set -o nounset
set -o pipefail
[[ -n "${TRACE+x}" ]] && set -o xtrace
