{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"]
    }
  },

  "suggest.floatConfig": {
    "border": true,
  },

  "signature.floatConfig": {
    "border": true,
  },

  "diagnostic.floatConfig": {
    "border": true,
  },

  "hover.floatConfig": {
    "border": true,
  },

  "coc.preferences.extensionUpdateCheck": "weekly",

  // https://github.com/dense-analysis/ale#5iii-how-can-i-use-ale-and-cocnvim-together
  "diagnostic.displayByAle": true,

  "diagnostic.warningSign": "»",
  "diagnostic.errorSign": "»",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",

  "yank.highlight.enable": false,

  // find is slower than ag
  "list.source.files.command": "ag",
  // list.source.files.args must specify whole
  // https://github.com/neoclide/coc-lists/blob/25cd38285df23766fa8c543c307f9ddf65120902/src/files.ts#L94
  "list.source.files.args": ["--hidden", "-f", "-g", ".", "--nocolor"],
  "list.source.files.excludePatterns": [
    "**/vendor/**",
    "**/node_modules/**",
    "**/bower_components/**",
    "**/.git/**",
  ],

  // see :h coc-list-mappings-custom
  "list.insertMappings": {
    "<C-c>": "do:exit",
    "<C-x>": "do:stop",
    "<C-t>": "action:tabe",
    "<C-s>": "action:split",
    "<C-v>": "action:vsplit",
    "<A-s>": "do:switch",
    "<A-v>": "prompt:paste",
    "<C-r>": "do:refresh",
    "<C-h>": "prompt:left",
    "<C-l>": "prompt:right",
    "<C-u>": "prompt:removeahead",
    "<C-k>": "prompt:removetail",
  },
  "list.normalMappings": {
  },
  "list.indicator": ":",

  "tabnine.priority": 999,

  "snippets.extends": {
  },
  "snippets.triggerCharacters": ["@"],

  "tsserver.npm": "~/.nvm/versions/node/v12.13.1/bin/npm",
  "tsserver.enableJavascript": false,

  // default json schemas: https://github.com/neoclide/coc-json/blob/master/src/catalog.json
  "json.schemas": [
//    {
//      "fileMatch": ["/coc-settings.json"],
//      "url": "../json-schemas/",
//    },
  ],

  "yaml.format.enable": true,
  "yaml.schemaStore.enable": true,
  // See more at http://schemastore.org/json/
  "yaml.schemas": {
    // "../kubernetes-json-schema/v1.16.4-local/all.json": "/*",
    // "../ansible-stable-2.9.json": "/*",
    "../json-schemas/travis.json": ["/.travis.yml"],
  },
}
